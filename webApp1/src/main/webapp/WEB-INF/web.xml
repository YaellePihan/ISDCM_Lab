<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
   version="4.0">
    
    <!-- SERVLETS -->
    <servlet>
        <servlet-name> servletUsuarios </servlet-name>
        <servlet-class> servlets.servletUsuarios</servlet-class>    <!-- He vist que es package.class -->
    </servlet>
    <servlet-mapping>
        <servlet-name> servletUsuarios </servlet-name>
        <url-pattern>/servletUsuarios</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name> servletRegistroVid </servlet-name>
        <servlet-class> servlets.servletRegistroVid</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name> servletRegistroVid </servlet-name>
        <url-pattern>/servletRegistroVid</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name> servletListadoVid </servlet-name>
        <servlet-class> servlets.servletListadoVid</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name> servletListadoVid </servlet-name>
        <url-pattern>/servletListadoVid</url-pattern>
    </servlet-mapping>
    
    <!-- GENERAL CONFIG -->
    <welcome-file-list>
        <welcome-file>registroUsu.jsp</welcome-file>
    </welcome-file-list>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
